<!DOCTYPE html>
<html>
  <%- include ./partials/session.ejs %>
  <h1><small>SCHOOLS</small></h1>
  <h2>Pages Teachers</h2>
  <body>
    <div class="container-fluid">
      <table class="table table-stripped">
        <thead>
          <tr>
            <th>ID</th>
            <th>First Name</th>
            <th>Last Name</th>
            <th>Email</th>
            <th>Subject</th>
            <th colspan="2">Action</th>
          </tr>
        </thead>
        <tbody>
        <%dataTeachers.forEach(row=>{ %>
          <tr>
            <td><%= row.id%></td>
            <td><%= row.first_name%></td>
            <td><%= row.last_name%></td>
            <td><%= row.email%></td>
            <td><%= row.subject_name%></td>
            <td><a href="/teachers/edit/<%= row.id%>">Edit</td>
            <td><a href="/teachers/delete/<%= row.id%>">Delete</td>
          </tr>
        <%})%>
        </tbody>
      </table>
      <a href="/teachers/add"><button type="button" name="add">Add</button></a>
      <a href="/index"><button type="button" name="back">Back</button></a>
    </body>
    </div>
</html>
