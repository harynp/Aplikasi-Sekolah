<!DOCTYPE html>
<html>
  <%- include ./partials/session.ejs %>
  <h1><small>SCHOOLS</small></h1>
  <h2>Pages Subjects</h2>
  <body>
    <div class="container-fluid">
      <table class="table table-stripped">
        <thead>
          <tr>
            <th>ID</th>
            <th>Subject</th>
            <th>Teachers</th>
            <th>Action</th>
            <th colspan="2">Option</th>
          </tr>
        </thead>
        <tbody>
          <%dataSubjects.forEach(row=>{ %>
            <tr>
              <td><%= row.id%></td>
              <td><%= row.subject_name%></td>
              <td>
                <%if(row.teachers.length > 0){ %>
                  <%row.teachers.forEach((teachers,index)=>{ %>
                    <%= (index+=1) + '.' + teachers %>
                    <br>
                  <%})%>
                <%} else {%>
                <%}%>
              </td>
              <td><a href="/subjects/enrolledstudents/<%= row.id%>">Enrolled Students</td>
              <td><a href="/subjects/edit/<%= row.id%>">Edit</td>
              <td><a href="/subjects/delete/<%= row.id%>">Delete</td>
            </tr>
          <%})%>
      </table>
      <a href="/subjects/add"><button type="button" name="add">Add</button></a>
      <a href="/index"><button type="button" name="back">Back</button></a>
      </tbody>
    </div>

  </body>
</html>
